
<h3>Create New Game for <strong><%=@team.name%></strong></h3>
<div class="field">
<%= form_for @game, :url => {:controller => "games", :action => "create"} do |f| %>
 <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this user from being saved:</h2>
 
      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= f.label :game_time %>
<%= f.time_field :game_time %>
<%= f.label :game_date %>
<%= f.date_field :game_date %>
<%= f.label :check_created_sport %>
<%= f.collection_select :sport_id, Sport.all, :id, :name %></br>
<%= f.hidden_field :team_id, :value => @team.id %> 

Choose a field <%= f.collection_check_boxes :field_ids, Field.all, :id, :name %> or </br>
<%= f.submit %>
<% end %>
</div>